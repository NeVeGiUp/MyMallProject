<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_red_bg"
                android:orientation="vertical"
                android:paddingBottom="4dp"
                android:paddingTop="21dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="47dp"
        android:layout_marginTop="@dimen/dp12"
        android:background="@mipmap/home_search_iv"/>

    <ImageView
        android:id="@+id/search_iv"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="25dp"
        android:src="@mipmap/search_iv"/>

    <EditText
        android:minWidth="240dp"
        android:id="@+id/home_search_input_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="24dp"
        android:layout_toRightOf="@+id/search_iv"
        android:background="@null"
        android:ellipsize="end"
        android:hint="输入宝贝名称"
        android:maxLines="1"
        android:paddingRight="70dp"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textSize="@dimen/dp12"/>

    <ImageView
        android:id="@+id/home_shopping_cart_iv"
        android:layout_width="30dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_marginTop="17dp"
        android:padding="3dp"
        android:src="@mipmap/shopping_cart_white"/>


</RelativeLayout>